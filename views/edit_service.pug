doctype html 
html 
    head 
        title Sobre - Eletro-ima
        link(rel='stylesheet',href='/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet',href='/css/about.css')
        script(src='/js/home.js')
    body

        //Header da página
        block content
            #page
                nav.navbar.navbar-expand-lg.navbar-light.bg-light
                    a.navbar-brand(href='/home') Inicio
                    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
                        span.navbar-toggler-icon
                    #navbarNav.collapse.navbar-collapse
                        ul.navbar-nav
                            li.nav-item.active
                                a.nav-link(href='/about')
                                    | Sobre 
                                    span.sr-only (current)
                            li.nav-item
                                a.nav-link(href='/plans') Planos
                                                li.nav-item
                                a.nav-link(href='/contact') 
                                    span.badge.badge-secondary Contrate-nos!
                
                //Body da página
                //Icone no canto inferior esquerdo
                .pageicon
                    img#icon-img(src="/imgs/icon.png", alt="icone")
                //Body da página
                h1 
                    | Editar serviço
                .container
                    .row
                        .col
                            .card.mb-4.box-shadow 
                                .card-body 
                                    .card-text
                                        form(method='POST',action='/edit_service/' + meuServico._id)
                                            #form-group 
                                                label Novo Titulo do serviço: 
                                                input.form-control(name="titulo", type='text',value = meuServico.titulo)
                                            #form-group 
                                                label Nova Flag do serviço: 
                                                input.form-control(name='flagservice', type='text',value = meuServico.flag)
                                            #form-group 
                                                label Nova Descrição do serviço: 
                                                input.form-control(name='descricao', type='text',value = meuServico.descricao)
                                            #form-group 
                                                label Novo Path para a imagem: 
                                                input.form-control(name='imagem', type='text',value = meuServico.imagem) 
                                            br
                                            input.btn.btn-primary(type="submit",value='Concluir') 
                //Rodapé da página