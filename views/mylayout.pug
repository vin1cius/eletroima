            .carousel-inner
                .carousel-item.active
                    img.d-block.w-100(src='https://http2.mlstatic.com/D_NQ_NP_864164-MLB41971659848_052020-O.jpg' style='width:50px; height:100px;' alt='First slide')
                .carousel-item
                    img.d-block.w-100(src='https://http2.mlstatic.com/D_NQ_NP_648205-MLB40617375573_012020-O.jpg' style='width:50px; height:100px;' alt='Second slide')
                .carousel-item
                    img.d-block.w-100(src='https://http2.mlstatic.com/D_NQ_NP_613506-MLB26004348910_092017-O.jpg' style='width:50px; height:100px;' alt='Third slide')
            a.carousel-control-prev(href='#carouselExampleIndicators' role='button' data-slide='prev')
                span.carousel-control-prev-icon(aria-hidden='true')
                span.sr-only Previous
            a.carousel-control-next(href='#carouselExampleIndicators' role='button' data-slide='next')
                span.carousel-control-next-icon(aria-hidden='true')
                span.sr-only Next